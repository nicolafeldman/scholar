<%= render 'layouts/photoscroll' %>

<div class="row-fluid">

<div class="text-container span9" id="contact-container">
<%= @press.text %>
<% if signed_in? %>
	<%= button_to "Edit text", edit_press_path(1), :method => :get %>
<% end %>
 <br> <br>

<% if !(@press.links.first == nil) %>
	<% @press.links.each do |link| %>
		<%= link.text_before %>
		<% if link.url.to_s.include?("http://") %>
			<a href=<%= link.url.to_s %> ><%= link.link_text %></a>
		<% else %>
			<a href=<%= 'http://' + link.url.to_s %> ><%= link.link_text %></a>
		<% end %>
		<%= link.text_after %> 
		<% if signed_in? %>
			|
			<%= link_to "delete", link, method: :delete %>
		<% end %>
      	<br> <br>
	<% end %>
<% end %>

<br>

<% if signed_in? %>
Add a new link:
<%= form_for(@link) do |f| %>

  <div class="field">
  	<%= f.label :text_to_go_before_link %>
    <%= f.text_area :text_before %> <br>

    <%= f.label :text_to_show_up_as_linked %>
    <%= f.text_area :link_text %>

    <%= f.label :URL %>
    <%= f.text_area :url %> <br>

    <%= f.label :text_to_go_after_link %>
    <%= f.text_area :text_after %>
  </div>
  <%= f.submit "Add link", class: "btn btn-large btn-primary" %>
<% end %>
<% end %>
</div>

<%= render 'layouts/sidebar' %>

</div>