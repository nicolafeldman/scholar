<%= render 'layouts/photoscroll' %>

<div class="row-fluid">

<div class="text-container span9" id="contact-container">
<p class="headline"><%= Headline.first.contact %></p>
<% if signed_in? %>
	<%= button_to "Edit headline", '/edit_contact_headline', :method => :get, class: "btn" %>
<% end %>

<p>
<%= simple_format(h @contact.text) %>

</p>

<% if signed_in? %>
<%= button_to "Edit this page", edit_contact_path(1), :method => :get, :form_class => "edit", class: "btn btn-large" %>
<% end %>
</div>

<%= render 'layouts/sidebar' %>

</div>
