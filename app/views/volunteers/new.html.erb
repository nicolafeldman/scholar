<%= form_for @volunteer, :html => { :class => 'form-horizontal', multipart: true } do |f| %>

      <h4>Text to appear on "Teach or Volunteer" page:</h4>
      <%= f.text_area :text, class: "full-width-text-area" %>

      <h4>Choose TWO photos with portrait orientation:</h4>
      <%= file_field_tag "images[]", type: :file, multiple: true %><br><br>

    <%= f.submit "Update page", :class => 'btn btn-large btn-primary' %>

<% end %>