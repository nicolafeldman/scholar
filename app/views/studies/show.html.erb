<%= render 'layouts/photoscroll' %>

<div class="row-fluid">


<div class="text-container span9">

<p class="headline"><%= Headline.first.studies %></p>
<% if signed_in? %>
	<%= button_to "Edit headline", '/edit_studies_headline', :method => :get, class: "btn" %>
<% end %>

<% if !@study.pictures.first.nil? %>

<div id="study-left-empty-div">&nbsp;</div>

<div id="enrich-photo-left">
	<img id="enrich-photo" src=<%= @study.pictures.first.image.url %> >
</div>

<div id="study-right-empty-div">&nbsp;</div>

<div id="enrich-photo-right">
	<img id="enrich-photo" src=<%= @study.pictures.last.image.url %> >
</div>
<% end %>

<p><%= simple_format(h @study.text) %></p>

<% if signed_in? %>
<%= button_to "Update this page", edit_study_path(1), :method => :get, :form_class => "edit", class: "btn btn-large" %>
<% end %>
</div>




<%= render 'layouts/sidebar' %>

</div>
