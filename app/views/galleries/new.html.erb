<h4>Choose 5 photos with landscape orientation:</h4>

<%= form_for @gallery, :html => { :class => 'form-horizontal', multipart: true } do |f| %>
    
      <%= file_field_tag "images[]", type: :file, multiple: true %>
      <br><br>
    <%= f.submit "Update gallery photos", :class => 'btn btn-large btn-primary' %>

<% end %>