<h4>Update headline for Donate page:</h4>
    <%= form_for @headline, url: {controller: "headlines", action: "update_donates_headline"}, :html => { :multipart => true }, method: :patch do |form| %>

      <%= form.text_field :donates %><br><br>

      <%= form.submit "Update headline", class: "btn btn-large" %>
    <% end %>