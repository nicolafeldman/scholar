<h1>Update the information for this course</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @course, url: {controller: "courses", action: "update"}, :html => { :multipart => true }, method: :patch do |form| %>
      <%= form.text_field :name %>
      <%= form.text_area :description %>
      <%= file_field_tag "images[]", type: :file, multiple: true %>
      <%= form.submit %>
    <% end %>
    
  </div>
</div>